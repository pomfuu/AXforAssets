<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2248"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A2248"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="#000E24">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:onClick="menu" />

            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"
                android:fontFamily="@font/sweetsanspromedium"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Details | AX" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sweetsanspromedium"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Game Details" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"

            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                >

                <ImageView
                    android:id="@+id/gameimage"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="15dp" />

                <TextView
                    android:id="@+id/gametitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sweetsanspromedium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="120dp"
                    />

                <TextView
                    android:id="@+id/gamedesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sweetsanspromedium"
                    android:textColor="#95FFFFFF"
                    android:textSize="11sp"
                    android:layout_marginTop="42dp"
                    android:layout_marginStart="120dp"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            >
            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sweetsanspromedium"
                android:text="Email"
                android:textSize="14sp"
                android:padding="5dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Emailfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_lay"
                android:fontFamily="@font/sweetsanspromedium"
                android:hint="AX@gmail.com"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:textColorHint="#60000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paymenttxt"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/sweetsanspromedium"
                android:text="Payment Confirmation"
                android:textSize="14sp"
                android:padding="5dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/paymentfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="10dp"
                android:background="@drawable/rounded_lay"
                android:fontFamily="@font/sweetsanspromedium"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sweetsanspromedium"
                android:text="Confirm"
                android:textColor="@color/white"
                android:backgroundTint="#0055DA"
                android:background="@drawable/buttoncustom"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>